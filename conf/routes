# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           org.andrewconner.spot.controllers.SpotController.test(filter: org.andrewconner.spot.controllers.ResultFilter)


GET     /graph                      org.andrewconner.spot.controllers.SpotController.graph(search: Option[String])


GET     /api/history/csv            org.andrewconner.spot.controllers.SpotController.csvHistory(search: Option[String])


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
